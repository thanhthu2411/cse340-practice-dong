<%- include('partials/header')%>
<main>
    <h1>Course Catalog</h1>
    <p>Browse our available courses and click on any course to see detailed information including available sections and instructor.</p>

    <div class="course-list">
        <!-- courses is an object and not iterable, so we need object.values() to return an array of all values -->
        <% Object.values(courses).forEach(course => {%>
            <div class="course-card">
                <h3><a href="/catalog/<%= course.slug %>"><%= course.name %></a></h3>
                <p class="course-id"><%= course.id%> â€¢ <%= course.creditHour %> credits</p>
                <p class="course-description"><%= course.description %></p>
            </div>
        <% }); %>
    </div>
</main>
<%- include('partials/footer')%>